# Create template
cat > .env.example << 'EOF'
# Django Settings
SECRET_KEY=generate-using-python-command-below
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,portal.monoliet.cloud
CSRF_TRUSTED_ORIGINS=https://portal.monoliet.cloud,https://n8n.monoliet.cloud

# Database
DB_NAME=monoliet_clients
DB_USER=monoliet
DB_PASSWORD=your-secure-password-here
DB_HOST=postgres
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=info@monoliet.cloud
EMAIL_HOST_PASSWORD=your-google-app-password
DEFAULT_FROM_EMAIL=noreply@monoliet.cloud

# n8n Integration
N8N_URL=https://n8n.monoliet.cloud
N8N_API_KEY=your-n8n-api-key

# Security - Generate using commands below
ENCRYPTION_KEY=generate-using-fernet-command-below

# Generate SECRET_KEY:
# python3 -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

# Generate ENCRYPTION_KEY:
# python3 -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
EOF

# Add it to git
git add .env.example